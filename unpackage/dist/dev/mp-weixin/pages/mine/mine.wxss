.mine {
  display: flex;
  flex-direction: column;
}
.mine .top {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  background-color: #007bff;
  justify-content: space-between;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}
.mine .top .top_top {
  display: flex;
  padding: 0rpx 40rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
}
.mine .top .top_top > image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.mine .top .top_top > view {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: space-between;
  padding: 16rpx 0rpx;
  box-sizing: border-box;
}
.mine .top .top_top > view > text {
  font-size: 28rpx;
  color: #fff;
}
.mine .top .top_top > view > text:nth-child(2) {
  font-size: 24rpx;
  background-color: #fff;
  color: #007bff;
  border-radius: 4rpx;
  padding: 0rpx 6rpx;
  box-sizing: border-box;
}
.mine .top .bottom {
  width: 100%;
  display: flex;
}
.mine .top .bottom > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 180rpx;
  text-align: center;
  color: #fff;
}
.mine .top .bottom > view > text {
  flex: 1;
}
.mine .top .bottom > view > text:nth-child(1) {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.options {
  width: 100%;
  padding: 0rpx 32rpx;
  box-sizing: border-box;
}
.options > view {
  width: 100%;
  height: 48rpx;
  padding: 20rpx 0rpx;
  border-bottom: 0.5rpx solid #ebedf0;
  font-size: 28rpx;
  color: #323232;
}
.options > view .row {
  margin-left: 500rpx;
}

