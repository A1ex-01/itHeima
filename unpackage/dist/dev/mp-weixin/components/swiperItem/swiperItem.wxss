.swiperitem {
  position: fixed;
  top: 180rpx;
  bottom: 100rpx;
  left: 0;
  right: 0;
}
.swi {
  width: 100%;
  height: 100%;
}
.swi .swim {
  width: 100%;
  height: 100%;
}
.swi .swim .swiper-item {
  width: 100%;
  height: 100%;
}
.artitle-item {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.type_0 {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.type_0 > .tit {
  color: #323232;
  font-size: 28rpx;
  width: 75%;
}
.type_0 .bottom {
  display: flex;
  color: #969696;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.type_0 .bottom > .b1 {
  margin-right: 10rpx;
}
.type_1 {
  display: flex;
  flex-direction: column;
}
.type_1 > .top {
  display: flex;
  justify-content: space-between;
}
.type_1 > .top > .t1 {
  color: #323232;
  font-size: 28rpx;
  width: 75%;
}
.type_1 > .top .ti1 {
  width: 226rpx;
  height: 140rpx;
}
.type_1 .bottom {
  display: flex;
  color: #969696;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.type_1 .bottom > .tb1 {
  margin-right: 10rpx;
}
.type_3 {
  display: flex;
  flex-direction: column;
}
.type_3 > .t3 {
  color: #323232;
  font-size: 28rpx;
  width: 100%;
}
.type_3 > .img {
  width: 100%;
  margin: 6rpx 0rpx;
  display: flex;
  justify-content: space-between;
}
.type_3 > .img > .imgitem {
  width: 226rpx;
  height: 140rpx;
}
.type_3 .bottom {
  display: flex;
  color: #969696;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.type_3 .bottom > .text {
  margin-right: 10rpx;
}

