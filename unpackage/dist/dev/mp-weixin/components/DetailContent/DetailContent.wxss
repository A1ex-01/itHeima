.content {
  position: fixed;
  top: 88rpx;
  bottom: 90rpx;
  left: 0;
  right: 0;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  overflow-x: hidden;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
}
.content .end {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #ccc;
  margin-top: 40rpx;
  position: relative;
}
.content .end .checked {
  background-color: #007bff;
  color: #fff !important;
}
.content .end::after {
  position: absolute;
  left: calc(50% - 40rpx);
  top: -20rpx;
  background-color: #fff;
  padding: 0rpx 20rpx;
  content: "End";
  color: #ccc;
}
.content .end > .btn {
  width: 140rpx;
  height: 60rpx;
  border: 1px solid #007bff;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  margin: 60rpx 0rpx;
}
.content .container {
  margin-top: 40rpx;
}
.content .title {
  font-size: 32rpx;
  color: black;
  font-weight: bold;
  width: 100%;
}
.content .author {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 40rpx;
  border-bottom: 1rpx solid #ebedf0;
  padding-bottom: 40rpx;
}
.content .author .checked {
  background-color: #007bff;
  color: #fff !important;
}
.content .author image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.content .author .info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 14rpx 0rpx;
  box-sizing: border-box;
  width: 100%;
  margin-right: 20rpx;
  color: #323232;
}
.content .author .info text {
  font-size: 28rpx;
}
.content .author .info text:nth-child(2) {
  font-size: 24rpx;
  color: #ccc;
}
.content .author .btn {
  height: 44rpx;
  width: 140rpx;
  border: 1px solid #007bff;
  border-radius: 4rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #007bff;
}

